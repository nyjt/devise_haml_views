= render partial: 'devise/shared/header'
.row
  .span12
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      .form-fields
        .controls
          %h3= t('devise.labels.sign_up')
      .form-fields
        = render partial: 'shared/registration_fields', locals: {:f => f}
      .well.form-actions
        = f.submit t('devise.labels.sign_up'), :class=> 'btn btn-primary'
        .links
          %br
          = render "devise/shared/links"
