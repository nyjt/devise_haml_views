.container-fluid
  = simple_form_for(resource, url: session_path(resource), html: { class: 'form-inline navigation-form', id: 'login' }) do |f|
    .row
      .col-md-4= f.input :email, label: false, placeholder: I18n.t('devise.labels.email')
      .col-md-4= f.input :password, label: false, placeholder: I18n.t('devise.labels.password')
      .col-md-4= f.submit t('devise.labels.sign_in'), class: 'btn btn-primary'
    .row
      .col-md-4= f.input :remember_me, label: t('devise.labels.remember_me'), as: :boolean, required: false
      .col-md-4= link_to 'Forgot your password?', new_password_path(resource)
