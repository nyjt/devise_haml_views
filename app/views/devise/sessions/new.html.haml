= render partial: 'devise/shared/header'
#signin
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    = devise_error_messages!
    .form-fields
      .controls
        %h3= t('devise.labels.sign_in')
    .form-fields
      = f.input :email, label: t('devise.labels.email')
      = f.input :password, label: t('devise.labels.password')
      - if devise_mapping.rememberable?
        = f.input :remember_me, label: t('devise.labels.remember_me'), as: :boolean, required: false
    .well.form-actions= f.submit t('devise.labels.sign_in'), class: 'btn btn-primary'
    %br
= render 'devise/shared/links'
