%h2= t('devise.labels.resend_unlock_instructions')
= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f|
  = devise_error_messages!
  %div
    = f.label :email, t('devise.labels.email')
    %br/
    = f.email_field :email
  %div= f.submit t("devise.labels.resend_unlock_instructions")
= render "devise/shared/links"
