%nav.navbar.navbar-default{ role: 'navigation' }
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{ 'data-target' => '#bs-example-navbar-collapse-1', 'data-toggle' => 'collapse', type: 'button' }
        %span.sr-only Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{ href: root_path } DummyApp
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        - if current_user
          %li
            %a{ href: '#' } First
        %li
          %a{ href: '#' } Second
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li= current_user.to_s
          %li
            %a{ href: destroy_user_session_path, 'data-method' => :delete }= I18n.t('devise.labels.logout')
          %li
            %a{ href: '#'} Separated link
        - else
          %li
            = render partial: 'devise/sessions/navbar_new', locals: { resource: :user }
          %li
            %a.btn.btn-default{ href: new_user_registration_path }= I18n.t('devise.labels.sign_up')
    / /.navbar-collapse
